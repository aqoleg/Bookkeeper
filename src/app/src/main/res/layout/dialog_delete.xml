<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    android:layout_width="wrap_content" android:layout_height="wrap_content">
    <TextView android:id="@+id/text" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:minWidth="180dp" android:layout_margin="8dp" android:gravity="center" android:textSize="16sp" />
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="40dp"
        android:background="@color/colorMain">
        <TextView android:id="@+id/cancel" android:layout_width="match_parent" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:text="@string/cancel" android:textSize="16sp" />
        <TextView android:id="@+id/ok" android:layout_width="match_parent" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:text="@string/ok" android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>